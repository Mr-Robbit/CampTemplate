<% layout('layouts/boilerplate') %>
    <div class="row">
        <h1 class="text-center">New Campground</h1>
        <div class="col-md-6 offset-md-3">
            <form action="/campgrounds" method="POST" id="newCampground" novalidate class="needs-validation"
                enctype="multipart/form-data">
                <div class="mb-3 form-floating">
                    <input class="form-control" type="text" id="title" name="campground[title]" required
                        placeholder="Campground title">
                    <label class="form-label" for="title">title</label>
                </div>
                <div class="mb-3 form-floating">
                    <input class="form-control" type="text" id="location" name="campground[location]" required
                        placeholder="campground location">
                    <label class="form-label" for="location">location</label>
                </div>
                <!-- <div class="mb-3">
                    <label class="form-label" for="image">Add Images</label>
                    <input type="file" name="image" id="image" multiple min="1">
                </div> -->
                <!-- <div class="input-group mb-3">
                    <input type="file" class="form-control" id="image" multiple min="1">
                    <label class="input-group-text" for="image">Choose Images</label>
                </div> -->
                <!-- <div class="mb-3">
                    <label class="form-label" for="image">Image URL</label>
                    <input class="form-control" type="text" id="image" name="campground[image]" required>
                </div> -->
                <div class="mb-3 form-floating">
                    <div class="input-group">
                        <span class="input-group-text" id="basic-addon1">$</span>
                        <input type="number" class="form-control" id="price" name="campground[price]" min="0.00"
                            step=".01" placeholder="Price per night" aria-describedby="price-label" aria-label="price"
                            required>

                    </div>
                </div>
                <div class="mb-3 form-floating">
                    <textarea class="form-control" name="campground[description]" id="description" required></textarea>
                    <label class="form-label" for="image" required>Campground Description</label>
                </div>
                <div class="input-group mb-3">
                    <input type="file" class="form-control" id="image" multiple min="1" max="7" name="image">
                    <label class="input-group-text" for="image">Choose Images</label>
                </div>
                <div class="mb-3"> <button class="btn btn-success">Add campground</button></div>
            </form>

        </div>
    </div>