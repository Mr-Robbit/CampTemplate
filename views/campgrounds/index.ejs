<% layout('layouts/boilerplate') %>
<div id="cluster-map">

</div >
<div class="container">
    <div class="mb-3">
        <form action="/campgrounds" method="GET">
            <div class="input-group">
                <input aria-describedby="search-label" aria-label="search" class="form-control" type="text" name="search" placeholder="campground name or address">
                <button class="btn btn-primary px-5" type="submit"> Search </button> 
            </div>
        </form> 
    </div>
    <h1 class="mainHeader">Campgrounds</h1>
    
    <% for( let campground of campgrounds) { %>
         
        <div class="card mb-3">
            <div class="row">
                <div class="col-md-4">
                    <img class="img-fluid" src="<%= campground.images[0].url %> " alt="Campground Image">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= campground.title %>
                        </h5>
                        <p class="card-text">
                            <%= campground.description.slice(0, 150) + "..." %>
                        </p>
                        <p class="card-text">
                            <small class="text-muted">
                                <%= campground.location %>
                            </small>
                        </p>
                        <a href="/campgrounds/<%= campground._id %> " class="btn btn-primary">View</a>
                    </div>
                </div>
            </div>
        </div>
        <% } %>
</div>
        <script>
        const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
        const campgrounds = { features: <%- JSON.stringify(campgrounds) %>}
        </script>
        <script src="/scripts/clusterMap.js"></script>

        