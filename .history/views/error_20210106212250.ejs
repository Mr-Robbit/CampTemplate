<% layout( './layouts/boilerplate' ) %>
    <% console.log(err); %>
        <div class="row">
            <div class="col-6 offset-3">
                <div class="alert alert-danger" role="alert">
                    <h4 class="alert-heading">
                        <%= err.message %> : <%= err.statusCode %>
                    </h4>
                    <p>
                        <%= err.stack %>
                    </p>
                    <hr>
                    <p class="mb-0">
                        <%= err.description %>
                    </p>
                </div>
            </div>
        </div>