<% layout('layouts/boilerplate') %>
    <link rel="stylesheet" href="/css/stars.css">
    <div class="row">
        <div class="col-6">
            <div class="card mb-3">
                <% for(let img of campground.images) {%>
                    <img src="<%= img.url %> " class="card-img-top" alt="...">
                    <% } %>
                        <div class="card-body">
                            <div class="d-inline-flex flex-sm-col flex-md-row justify-content-between">
                                <h4 class="card-title">

                                    <%= campground.title %>
                                </h4>
                                <p class="starability-result" data-rating="<%= campground.average() %>"></p>
                            </div>
                            <p class="card-text">
                                <%= campground.description%>

                            </p>


                        </div>
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item text-muted">
                                <%= campground.location%>
                            </li>
                            <li class="list-group-item">$<%= campground.price %> per/Night
                            </li>
                            <li class="list-group-item"> <em>Submitted by: <%= campground.author.username %> </em> </li>
                        </ul>
                        <div class="card-body m-0 py-1">
                            <form action="/campgrounds/<%= campground._id %>?_method=DELETE" method="POST">
                                <div class="flex-row d-flex">
                                    <a class="btn btn-info p-2 flex-fill bd-highlight" href="/campgrounds "> Back </a>
                                    <% if(currentUser && campground.author._id.equals(currentUser._id)){ %>
                                        <a class="card-link btn btn-warning p-2 flex-fill bd-highlight"
                                            href="/campgrounds/<%= campground._id %>/edit ">Edit</a>
                                        <button class="btn btn-danger p-2 flex-fill bd-highlight">Delete</button>

                                        <% } %>

                                </div>
                            </form>
                        </div>
            </div>
        </div>
        <div class="col-6">
            <h1 class="reviews">Reviews</h1>
            <% if(currentUser) { %>
                <h2>Leave a Review!</h2>
                <form class="mb-3 needs-validation" action="/campgrounds/<%= campground._id  %>/reviews" novalidate
                    method="POST">
                    <div class="mb-3">
                        <fieldset class="starability-basic">
                            <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="0"
                                checked aria-label="No rating." />
                            <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                            <label for="first-rate1" title="Terrible">1 star</label>
                            <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                            <label for="first-rate2" title="Not good">2 stars</label>
                            <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                            <label for="first-rate3" title="Average">3 stars</label>
                            <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                            <label for="first-rate4" title="Very good">4 stars</label>
                            <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                            <label for="first-rate5" title="Amazing">5 stars</label>
                        </fieldset>
                    </div>
                    <div class="mb-3 form-floating">
                        <textarea placeholder="Leave a Review here" required class="form-control" name="review[heading]"
                            id="reviewHead"></textarea>
                        <label class="form-label" for="reviewHead">Heading. bait the hook and reel in the internet
                            points <span class="pronounced">(Required!)</span></label>
                    </div>
                    <div class="mb-3 form-floating">
                        <textarea placeholder="Leave a Review here" class="form-control" name="review[body]"
                            id="body"></textarea>
                        <label class="form-label" for="body">Main Review.. the meat and potatoes of your content
                            <span class="optional">(optional)</span>
                        </label>
                    </div>
                    <button class="btn btn-success">Add Review!</button>
                </form>
                <% } %>
                    <% for(let review of campground.reviews){ %>
                        <div class="card mb-3 reviewCard">
                            <div class="card-body">
                                <div class="d-flex flex-column flex-md-column flex-lg-row justify-content-between">
                                    <div class="me-4">
                                        <h5 class="card-title">
                                            Rating:
                                        </h5>
                                        <p class="starability-result" data-rating="<%= review.rating %>"></p>
                                    </div>
                                    <div class="align-self-stretch">
                                        <h5>
                                            <%= review.heading %>
                                        </h5>
                                    </div>
                                </div>
                                <hr>
                                <p class="card-text mb-0">
                                    <%= review.body %>
                                </p>
                                <abbr class="mt-1"> - <%= review.author.username %> - </abbr>
                                <hr>
                                Created:
                                <time class="timeStamp">
                                    <%= review.dateCreated %>
                                </time>
                                <% if(currentUser && review.author.equals(currentUser._id)) { %>
                                    <form
                                        action="/campgrounds/<%= campground._id %>/reviews/<%= review._id %>?_method=DELETE "
                                        method="POST">
                                        <button class="btn btn-sm btn-danger">Delete</button>
                                    </form>
                                    <% } %>
                            </div>
                        </div>
                        <% } %>
        </div>
    </div>