<% layout('layouts/boilerplate') %>
    <div class="container">
        <div class="col-md-6 col-xl-10">
            <div class="card mb-5">
                <img src="<%= campground.image %> " class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">
                        <%= campground.title %>
                    </h5>
                    <p class="card-text">
                        <%= campground.description%>
                    </p>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item text-muted">$<%= campground.location%>
                    </li>
                    <li class="list-group-item">$<%= campground.price %>
                    </li>
                </ul>
                <div class="card-body">
                    <form action="/campgrounds/<%= campground._id %>?_method=DELETE" method="POST">
                        <a class="card-link btn btn-warning" href="/campgrounds/<%= campground._id %>/edit ">Edit</a>
                        <button class="btn btn-danger">Delete</button>
                        <a class="btn btn-info" href="/campgrounds/<%= campground._id %> "> Back </a>
                    </form>
                </div>
            </div>
            <form action="/campgrounds/:id/" method="post">
                <div class="mb-3">
                    <label class="form-label" for="body">Review</label>
                    <textarea class="form-control" name="review[body]" id="body" cols="30" rows="10"></textarea>
                </div>
                <div class="mb-3">
                    <label for=""></label>
                </div>
            </form>
        </div>
    </div>